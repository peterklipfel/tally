%h1 Listing expenses

%table
  %tr
    %th
    %th
    %th

  - @expenses.each do |expense|
    %tr
      %td= link_to content_tag(:i, Tally::Application::SHOW.html_safe, class: "ss-icon"), expense
      %td= link_to content_tag(:i, Tally::Application::EDIT.html_safe, class: "ss-icon"), edit_expense_path(expense)
      %td= link_to content_tag(:i, Tally::Application::DESTROY.html_safe, class: "ss-icon"), expense, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Expense', new_expense_path
