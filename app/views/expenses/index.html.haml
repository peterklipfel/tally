%h1 Listing expenses

%table
  %tr
    %th
    %th
    %th

  - @expenses.each do |expense|
    %tr
      %td= link_to content_tag(:i, Tally::Application::SHOW.html_safe, class: "ss-icon"), invoice_expense_path(expense.invoice.to_param, expense.to_param)
      %td= link_to content_tag(:i, Tally::Application::EDIT.html_safe, class: "ss-icon"), edit_invoice_expense_path(expense.invoice, expense)
      %td= link_to content_tag(:i, Tally::Application::DESTROY.html_safe, class: "ss-icon"), invoice_expense_path(expense.invoice, expense), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Expense', new_invoice_expense_path(@expenses.first.invoice)
