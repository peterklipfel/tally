!!!
%html
  = render "head"
  %body
    .header
      .container
        .grid-12
          = image_tag "/assets/logo@2x.png"
          = link_to content_tag(:h1, "Tally"), root_path
          .navigation
            - if signed_in?
              = link_to "Clients", clients_path, class: :button
              = link_to "Invoices", invoices_path, class: :button
              = link_to "Payments", payments_path, class: :button
              = link_to "Sign Out", destroy_user_session_path, method: :delete, class: :button
            - else
              = link_to "Sign In", new_user_session_path, class: :button
              = link_to "Sign Up", new_user_registration_path, class: :button
    .container
      .content
        = render "flash"
        = yield